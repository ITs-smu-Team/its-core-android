<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    xmlns:tools2="http://schemas.android.com/tools"
    android:id="@+id/ranking_layout"


    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ranking_border"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">

    <ImageView
        android:id="@+id/img_ranking_profile"
        android:layout_width="80dp"
        android:layout_height="70dp"

        android:scaleType="centerCrop"
        android:src="@drawable/penguin"
        tools:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_ranking_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"

        android:text="본인아이디"
        android:textSize="25dp"
        tools:layout_constraintEnd_toStartOf="@+id/btn_ranking_exercise"
        tools:layout_constraintStart_toEndOf="@+id/img_ranking_profile"
        tools:layout_constraintTop_toTopOf="@+id/img_ranking_profile" />

    <TextView
        android:id="@+id/txt_ranking_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"

        android:text="2000pt"
        android:textSize="20dp"
        tools:layout_constraintEnd_toEndOf="@+id/txt_ranking_id"
        tools:layout_constraintHorizontal_bias="0.557"
        tools:layout_constraintStart_toStartOf="@+id/txt_ranking_id"
        tools:layout_constraintTop_toBottomOf="@+id/txt_ranking_id" />

    <Button
        android:id="@+id/btn_ranking_exercise"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="프로필"
        tools2:ignore="HardcodedText"
        tools:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintEnd_toEndOf="parent"
        tools:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>