<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="운동이름"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:visibility="visible"
        android:id="@+id/numberPicker_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"

        android:theme="@style/AppTheme"
        app:layout_constraintEnd_toStartOf="@id/guideline_set_time"
        app:layout_constraintTop_toBottomOf="@id/txt_exercise_name" />

    <NumberPicker
        android:visibility="visible"
        android:id="@+id/numberPicker_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"

        android:theme="@style/AppTheme"
        app:layout_constraintStart_toEndOf="@id/guideline_set_time"
        app:layout_constraintTop_toBottomOf="@id/txt_exercise_name" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_set_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/btn_settime_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:text="운동시작"
        app:layout_constraintEnd_toStartOf="@+id/guideline_set_time"
        app:layout_constraintTop_toBottomOf="@id/numberPicker_min" />

    <Button
        android:id="@+id/btn_settime_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="취소"
        app:layout_constraintStart_toStartOf="@id/guideline_set_time"
        app:layout_constraintTop_toBottomOf="@id/numberPicker_sec" />

</androidx.constraintlayout.widget.ConstraintLayout>